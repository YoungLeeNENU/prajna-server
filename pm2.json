{
    "apps": [{
        "name": "prajna-server",
        "script": "app.js",
        "env": {
            "NODE_ENV": "production"
        },
        "instances": 4,
		"exec_mode": "cluster",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "log_type": "json",
        "max_memory_restart": "1024M",
        "merge_logs": true,
		"node-args": "--nouse-idle-notification --gc_global --max-old-space-size=2048 --max-new-space-size=1024",
        "watch": false
    }]
}
