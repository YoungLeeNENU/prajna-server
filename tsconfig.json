{
    "compilerOptions": {
        "outDir": "./build",
		"declaration": true,
        "module": "commonjs",
		"moduleResolution": "ES6",
		"types": [ "node", "koa", "koa-bodyparser", "koa-router", "moment", "kcors" ],
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": [
            "es2015"
        ],
        "typeRoots": [
			"node_modules/@types"
        ],
        "target": "es2015"
    },
    "include": [
        "./src/**/*"
    ],
	"exclude": [
		"neurons",
		"node_modules"
	]
}
